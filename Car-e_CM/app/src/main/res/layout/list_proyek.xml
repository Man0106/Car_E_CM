<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        xmlns:cv="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        cv:cardCornerRadius="0dp"
        cv:cardBackgroundColor="@android:color/darker_gray"
        cv:cardElevation="10dp" >

        <androidx.cardview.widget.CardView
            xmlns:cv="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:layout_marginTop="5dp"
            cv:cardCornerRadius="10dp"
            cv:cardBackgroundColor="@color/colorAccent"
            cv:cardElevation="0dp" >

            <TextView
                android:id="@+id/namaProyek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:text="Nama Proyek"
                android:textSize="30dp"
                android:textColor="#fff"/>

        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>
</RelativeLayout>